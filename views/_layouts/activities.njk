{% extends "views/_layouts/base.njk" %}

{% block content %}

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Distance (km)</th>
      <th>Pace (min/km)</th>
      <th>Avg HR</th>
      <th>Ascent (m)</th>
    </tr>
  </thead>
  <tbody>
    {% for activity in strava %}
      {% if activity.type == "Run" %}
        <tr>
          <td>{{ activity.start_date_local | date("yyyy-MM-dd") }}</td>
          <td>{{ (activity.distance / 1000) | round(2) }}</td>
          <td>
            {% set pace = activity.moving_time / (activity.distance / 1000) %}
            {{ (pace / 60) | floor }}:{{ (pace % 60) | round | string | padStart(2, '0') }}
          </td>
          <td>{{ activity.average_heartrate | default("â€“") }}</td>
          <td>{{ activity.total_elevation_gain | round }}</td>
        </tr>
      {% endif %}
    {% endfor %}
  </tbody>
</table>


{% endblock %}